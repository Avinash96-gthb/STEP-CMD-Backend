{
  "openapi": "3.0.0",
  "info": {
    "title": "Telehealth Platform API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/clinic-create": {
      "post": {
        "summary": "Create a new clinic",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClinicDTO"
              },
              "example": {
                "name": "Sample Clinic",
                "businessName": "Sample Business",
                "streetAddress": "123 Main St",
                "city": "Sample City",
                "state": "SC",
                "country": "USA",
                "zipCode": "12345",
                "latitude": 40.0,
                "longitude": -74.0,
                "services": [
                  {
                    "name": "Consultation",
                    "code": "CONSULT",
                    "description": "General doctor consultation",
                    "averagePrice": 50,
                    "isActive": true
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Clinic created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClinicDTO"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/clinics": {
      "get": {
        "summary": "Get all clinics",
        "responses": {
          "200": {
            "description": "A list of clinics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ClinicDTO" }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/logs": {
      "get": {
        "summary": "Get all logs",
        "description": "Returns all application logs.",
        "responses": {
          "200": {
            "description": "A list of log entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LogEntry"
                  }
                },
                "example": [
                  {
                    "timestamp": "2025-06-27T12:00:00.000Z",
                    "level": "Info",
                    "message": "Clinic created successfully.",
                    "meta": {
                      "clinicId": "a1b2c3d4-5678-1234-5678-abcdefabcdef"
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ServiceDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "code": { "type": "string" },
          "description": { "type": "string" },
          "averagePrice": { "type": "number" },
          "isActive": { "type": "boolean" }
        },
        "required": ["name", "code", "description", "averagePrice", "isActive"]
      },
      "ClinicDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "businessName": { "type": "string" },
          "streetAddress": { "type": "string" },
          "city": { "type": "string" },
          "state": { "type": "string" },
          "country": { "type": "string" },
          "zipCode": { "type": "string" },
          "latitude": { "type": "number" },
          "longitude": { "type": "number" },
          "services": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ServiceDTO" }
          }
        },
        "required": ["name", "businessName", "streetAddress", "city", "state", "country", "zipCode", "latitude", "longitude", "services"]
      },
      "LogEntry": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "level": { "type": "string" },
          "message": { "type": "string" },
          "meta": { "type": "object" }
        },
        "required": ["timestamp", "level", "message"]
      }
    }
  }
}
